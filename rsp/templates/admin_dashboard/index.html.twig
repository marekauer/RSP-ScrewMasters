        </table>
    </section>

    <!-- Sekce pro články -->
    <section id="articles-section" class="mt-5">
        <h2 class="mb-4">Seznam Článků</h2>
        <table class="table table-hover table-bordered">
            <thead class="table-success">
                <tr>
                    <th>ID</th>
                    <th>Název</th>
