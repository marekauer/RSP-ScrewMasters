{% extends 'base.html.twig' %}

{% block title %}Hello AdminDashboardController!{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center mb-5">Admin Konzole</h1>
    <div class="row">
        <!-- Karta pro autory -->
        <div class="col-md-6 mb-4">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Editace Autorů</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">Spravujte seznam autorů, upravujte jejich údaje nebo je odstraňujte.</p>
                    <a href="#authors-section" class="btn btn-primary">Přejít na sekci</a>
                </div>
            </div>
        </div>

        <!-- Karta pro články -->
        <div class="col-md-6 mb-4">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">Editace Článků</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">Spravujte články, upravujte jejich obsah nebo měňte jejich stav.</p>
                    <a href="#articles-section" class="btn btn-success">Přejít na sekci</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Sekce pro autory -->
    <section id="authors-section" class="mt-5">
        <h2 class="mb-4">Seznam Autorů</h2>
        <table class="table table-hover table-bordered">
